
extends layout

block content

	div.navbar.navbar-fixed-top
		div.navbar-inner
			div.container-fluid
				ul.nav.pull-left
					.brand Node.js & Socket.IO Chat Server
				ul.nav.pull-right
					li
						a(href='#')#connected

	#container
		#send-message.well.span4
			h2 Say Something
			hr
			label Your Name 
			input(type="text", name="name", id='name').span4
			label Your Message
			textarea(rows='6', name="msg", id='msg').span4
			button#btn-send.btn.btn-primary
				i.icon-pencil.icon-white
				| Send it !
		#messages.well.span4
			h2 Conversation
			hr
			#incoming

block scripts
	script(src='/vendor/jquery.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.7/socket.io.min.js')
	script(src='/js/index.js')